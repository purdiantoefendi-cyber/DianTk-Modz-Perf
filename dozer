#Dozer
for a in $(pm list packages | cut -f2 -d ':' | grep -v -F -f /sdcard/DianTk-Modz-Perf/dozer_exept.txt);do cmd appops set "$a" RUN_ANY_IN_BACKGROUND ignore;cmd appops set "$a" RUN_IN_BACKGROUND ignore;dumpsys deviceidle whitelist -"$a";done > /dev/null 2>&1

#allways on
for on in $(cat /sdcard/DianTk-Modz-Perf/dozer_exept.txt); do cmd appops set "$on" RUN_ANY_IN_BACKGROUND allow;cmd appops set "$on" RUN_IN_BACKGROUND allow;dumpsys deviceidle whitelist +"$on";done > /dev/null 2>&1

# Set
LOG=/storage/emulated/0/DianTk-Modz-Perf/DianTk-log.log
echo " â€¢> Dozer activated at $(date "+%H:%M:%S")" >> $LOG

# Report
am start -a android.intent.action.MAIN -e toasttext "Dozer Activated" -n bellavita.toast/.MainActivity

