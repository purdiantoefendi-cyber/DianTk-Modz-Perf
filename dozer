#Dozer
for a in $(pm list packages | cut -f2 -d ':' | grep -v -F -f /sdcard/DianTk-Modz-Perf/dozer_exept.txt);do cmd activity set-bg-restriction-level --user 0 "$a" hibernation;cmd activity set-inactive "$a" true;cmd activity set-standby-bucket "$a" restricted;cmd activity set-standby-bucket "$a" 50;cmd app_hibernation set-state "$a" true;cmd appops set "$a" RUN_ANY_IN_BACKGROUND ignore;cmd appops set "$a" RUN_IN_BACKGROUND ignore;cmd tare set-vip 0 "$a" false;dumpsys deviceidle whitelist -"$a";done > /dev/null 2>&1

#allways on
for on in $(cat /sdcard/DianTk-Modz-Perf/dozer_exept.txt); do am set-inactive "$on" false;dumpsys deviceidle whitelist +"$on";cmd activity set-bg-restriction-level --user 0 "$on" unrestricted;cmd activity set-inactive "$on" false;cmd activity set-standby-bucket "$on" active;cmd activity set-standby-bucket "$on" 10;cmd app_hibernation set-state "$on" false;cmd appops set "$on" RUN_ANY_IN_BACKGROUND allow;cmd appops set "$on" RUN_IN_BACKGROUND allow;cmd tare set-vip 0 "$on" true;donedone > /dev/null 2>&1

# Set
LOG=/storage/emulated/0/DianTk-Modz-Perf/DianTk-log.log
echo " â€¢> Dozer activated at $(date "+%H:%M:%S")" >> $LOG

# Report
am start -a android.intent.action.MAIN -e toasttext "Dozer Activated" -n bellavita.toast/.MainActivity

